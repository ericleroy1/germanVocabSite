<%- include('header') -%>
<%- include('navbar') -%>


<div class="mainDiv">

  <div class="filtersDiv">

    <div class="block1">
      <p class="filterP">Filter difficulty</p>
      <label for="hardWords">Hard</label>
      <input type="checkbox" class="checkbox" id="hardWords" value="hard" onclick="filterFunction()"/>
      <label for="mediumWords">Medium </label>
      <input type="checkbox" class="checkbox" id="mediumWords" value="medium" onclick="filterFunction()"/>
      <label for="easyWords">Easy</label>
      <input type="checkbox" class="checkbox" id="easyWords" value="easy" onclick="filterFunction()"/>
    </div>

    <div class="block2">
      <button class="btn btn-sm btn-success" type="button" name="button">Clear Filters</button>
    </div>

    <div class="block3">
        <form class="btn-group btn-group-sm navForm" role="group">
          <a href="/nouns" class="navbtn btn btn-secondary" type="button">Nouns</a>
          <a href="/verbs" class="navbtn btn btn-secondary" type="button">Verbs</a>
          <a href="/adjectives" class="navbtn btn btn-secondary" type="button">Adj/Adv</a>
          <a href="/others" class="navbtn btn btn-secondary" type="button">Others</a>
        </form>
    </div>

  </div>

<table id="myTable" class="table">
  <thead>
    <tr class="header">
      <th scope="col"></th>
      <th scope="col">Word</th>
      <th scope="col">Added</th>
      <th scope="col">Frequency</th>
      <th scope="col">Status</th>
      <th scope="col">Change Status</th>
      <th scope="col">Delete</th>
    </tr>
  </thead>
  <tbody>
    <% verbsList.forEach(function(item){ %>
      <tr>
        <th scope="row"></th>
          <td><%= item.word %></td>
          <td><%= item.timeStamp.toDateString() %></td>
          <td>
              <%= item.frequency %>
          </td>
          <td>
            <%= item.status %>
          </td>
          <td>
            <form class="trafficLightForm" action="/redVerb" method="post">
              <input name="inputId" value=<%= item._id %> type="hidden"></input>
              <button class="btn statusBtn btn-danger" type="submit">+</button>
            </form>
            <form class="trafficLightForm" action="/yellowVerb" method="post">
              <input name="inputId" value=<%= item._id %> type="hidden"></input>
              <button class="btn statusBtn btn-warning" type="submit">+</button>
            </form>
            <form class="trafficLightForm" action="/greenVerb" method="post">
              <input name="inputId" value=<%= item._id %> type="hidden"></input>
              <button class="btn statusBtn btn-success" type="submit">+</button>
            </form>
          </td>
          <td>
            <form class="trafficLightForm" action="/deleteVerb" method="post">
              <input name="inputId" value=<%= item._id %> type="hidden"></input>
              <button class="btn statusBtn btn-outline-danger deleteBtn" type="submit">X</button>
            </form>
          </td>
        </tr>
    <% }) %>
  </tbody>
</table>
</div>

<%- include('footer') -%>
